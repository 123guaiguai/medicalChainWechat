.title {
  width: 95%;
  margin: 10px auto;
  background-color: white;
  border-radius: 10px;
  padding: 10px 10px;
  display: flex;
  flex-direction: column;
}
.title > text:nth-child(1) {
  margin-bottom: 10px;
  font-size: 18px;
  font-weight: 700;
}
.title > text:nth-child(2) {
  color: #ccc;
}
.pay {
  width: 95%;
  margin: 10px auto;
  background-color: white;
  border-radius: 10px;
  padding: 10px 10px;
  display: flex;
  flex-direction: column;
}
.pay .header,
.pay .footer {
  display: flex;
  justify-content: space-between;
}
.pay .header > text:nth-child(2) {
  color: #ccc;
}
.pay .footer > text:nth-child(2) {
  color: #f05a15;
}
.info {
  width: 95%;
  margin: 10px auto;
  background-color: white;
  border-radius: 10px;
  padding: 10px 10px;
  display: flex;
  flex-direction: column;
}
.info .header,
.info .footer {
  display: flex;
  justify-content: space-between;
}
.info .header > text:nth-child(2) {
  color: #ccc;
}
.info .footer > text:nth-child(2) {
  color: #ccc;
}
.regulation {
  width: 95%;
  margin: 10px auto;
  background-color: white;
  border-radius: 10px;
  padding: 10px 10px;
  display: flex;
  align-items: center;
}
.regulation text {
  flex: 1;
}
.regulation > text:nth-child(2) {
  color: #ccc;
}
.agree {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: white;
  padding: 10px 10px;
  display: flex;
  flex-direction: column;
}
.agree .read text {
  color: #1e89ec;
}
.agree > text:nth-child(2) {
  width: 80%;
  padding: 10px 0;
  background-color: #4093f3;
  border-radius: 5px;
  color: white;
  margin: 10px auto;
  text-align: center;
}
